<div class="container d-flex justify-content-center align-items-center py-5" style="min-height: 80vh; background-color: white;">
  <div class="card border-0 shadow rounded-4 p-4" style="width: 100%; max-width: 400px;">

    <!-- Encabezado -->
    <div class="text-center mb-4">
      <%= image_tag "logo1.png", alt: "Logo ComunidApp", width: 75, class: "mb-2" %>
      <h2 class="fw-semibold text-primary mb-2" style="font-size: 1.75rem; letter-spacing:-0.5px;">
        Bienvenido a ComunidApp
      </h2>
      <p class="text-muted" style="font-size:0.95rem;">
        Gesti칩n de edificios y condominios, en un solo lugar
      </p>
    </div>

    <!-- Formulario -->
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">

        <%= f.input :email,
            label: false,
            placeholder: "Correo electr칩nico",
            required: true,
            autofocus: true,
            input_html: { autocomplete: "email", class: "form-control form-control-lg rounded-3 shadow-sm border-1", style:"font-size:1rem;" } %>

        <%= f.input :password,
            label: false,
            placeholder: "Contrase침a",
            required: true,
            input_html: { autocomplete: "current-password", class: "form-control form-control-lg rounded-3 shadow-sm border-1", style:"font-size:1rem;" } %>
      </div>

      <!-- Submit -->
      <div class="form-actions mt-4">
        <%= f.button :submit, "Iniciar sesi칩n",
            class: "btn btn-primary btn-lg w-100 fw-medium rounded-3 shadow-sm",
            style:"background-color:#0743a1; border-color:#0743a1; font-size:1.1rem; font-weight:500; letter-spacing:0.3px;" %>
      </div>
    <% end %>

    <!-- Links -->
    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
