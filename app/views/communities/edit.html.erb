<div class="container py-5">
  <!-- Título de la comunidad -->
  <div class="text-center mb-4">
    <h1 class="fw-bold text-primary mb-3" style="font-size: 2rem; letter-spacing: -0.5px;">
      Editar Comunidad
    </h1>
    <p class="text-muted">Actualiza los detalles de tu comunidad de vecinos</p>
  </div>

  <!-- Formulario de creación de comunidad -->
  <%= render "form", community: @community %>

  <!-- Volver a Mis Comunidades -->
  <div class="text-center mt-4">
    <%= link_to "Volver a Mis Comunidades", communities_path, class: "btn btn-secondary w-100 mb-3" %>
  </div>
</div>
