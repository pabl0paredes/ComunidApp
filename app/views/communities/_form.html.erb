<%= simple_form_for community do |f| %>

  <div class="form-group">
    <%= f.input :name, label: "Nombre de la comunidad" %>
  </div>

  <div class="form-group">
    <%= f.input :size, label: "Cantidad de usuarios permitidos", input_html: { min: 1 } %>
  </div>

  <div class="form-group">
    <%= f.input :address, label: "Dirección" %>
  </div>

  <!-- Campos ocultos para lat/lng -->
  <%= f.input :latitude, as: :hidden, input_html: { id: "community_latitude" } %>
  <%= f.input :longitude, as: :hidden, input_html: { id: "community_longitude" } %>

  <h4>Selecciona la ubicación en el mapa:</h4>
  <div
    id="map"
    data-lat="<%= community.latitude %>"
    data-lng="<%= community.longitude %>"
    style="height: 400px; border-radius: 8px; margin-bottom: 20px;"
  ></div>

  <%= f.submit community.persisted? ? "Guardar" : "Crear Comunidad", class: "btn btn-primary" %>

<% end %>
