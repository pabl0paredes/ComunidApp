<div class="container py-5">

  <h2 class="fw-bold text-primary mb-4">Detalle de la Reserva</h2>

  <div class="row g-4 mb-4">

    <div class="col-md-6">
      <div class="p-4 shadow-sm border-0 rounded-4 bg-white">
        <h5 class="fw-semibold text-primary mb-3">
          <i class="fa-solid fa-house me-2"></i> Espacio común
        </h5>
        <p class="mb-0"><%= @booking.common_space.name %></p>
      </div>
    </div>

    <div class="col-md-6">
      <div class="p-4 shadow-sm border-0 rounded-4 bg-white">
        <h5 class="fw-semibold text-primary mb-3">
          <i class="fa-solid fa-user me-2"></i> Reservado por
        </h5>
        <p class="mb-0"><%= @booking.resident.user.name if @booking.resident&.user %></p>
      </div>
    </div>

    <div class="col-md-6">
      <div class="p-4 shadow-sm border-0 rounded-4 bg-white">
        <h5 class="fw-semibold text-primary mb-3">
          <i class="fa-solid fa-calendar-day me-2"></i> Inicio
        </h5>
        <p class="mb-0"><%= @booking.start.strftime("%d/%m/%Y %H:%M") %></p>
      </div>
    </div>

    <div class="col-md-6">
      <div class="p-4 shadow-sm border-0 rounded-4 bg-white">
        <h5 class="fw-semibold text-primary mb-3">
          <i class="fa-solid fa-calendar-day me-2"></i> Fin
        </h5>
        <p class="mb-0"><%= @booking.end.strftime("%d/%m/%Y %H:%M") %></p>
      </div>
    </div>

    <div class="col-12">
      <div class="p-4 shadow-sm border-0 rounded-4 bg-white">
        <h5 class="fw-semibold text-primary mb-3">
          <i class="fa-solid fa-tag me-2"></i> Precio
        </h5>
        <p class="mb-0"><%= number_to_currency(@booking.common_space.price, unit: "S/ ") %></p>
      </div>
    </div>

  </div>

  <div class="d-flex flex-wrap gap-3 mt-3">
    <% if policy(@booking).edit? %>
      <%= link_to "Editar", edit_booking_path(@booking),
          class: "btn btn-warning btn-lg rounded-3 shadow-sm px-4" %>
    <% end %>

    <%= link_to "Eliminar", booking_path(@booking),
        method: :delete,
        data: { confirm: "¿Seguro que deseas eliminar esta reserva?" },
        class: "btn btn-danger btn-lg rounded-3 shadow-sm px-4" %>

    <%= link_to "Cerrar", common_space_path(@common_space),
        class: "btn btn-secondary btn-lg rounded-3 shadow-sm px-4" %>
  </div>

</div>
