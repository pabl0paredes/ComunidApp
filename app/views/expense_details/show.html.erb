<div class="container mt-4">

  <h2 class="mb-3">
    <%= @expense_detail.name %> -
    <strong><%= number_to_currency(@expense_detail.amount) %></strong>
  </h2>

  <div class="card shadow-sm">
    <div class="card-body p-0">

      <% if @expense_detail.expense_details_neighbors.any? %>

        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Nombre</th>
              <th>Unidad</th>
              <th>Monto</th>
              <th>Estado</th>
            </tr>
          </thead>

          <tbody>
            <% @expense_detail.expense_details_neighbors.each do |edn| %>
              <tr>
                <td><%= edn.neighbor.name %></td>
                <td><%= edn.neighbor.unit_number %></td>
                <td><%= number_to_currency(edn.amount_due) %></td>

                <td>
                  <% if edn.paid? %>
                    <span class="badge bg-success">Pagado</span>
                  <% else %>
                    <span class="badge bg-danger">No pagado</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

      <% else %>
        <div class="p-4 text-center text-muted">
          AÃºn no hay vecinos asignados a este gasto.
        </div>
      <% end %>

    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Volver", common_expense_path(@expense_detail.common_expense), class: "btn btn-secondary" %>
  </div>
</div>
