<div class="container mt-4">
  <h1 class="h4 mb-4">Editar Detalle</h1>
  <div class="card shadow-sm">
    <div class="card-body">
      <%= form_with model: @expense_detail, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :detail, "Detalle", class: "form-label" %>
          <%= f.text_field :detail,
                           value: @expense_detail.detail,
                           class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :amount, "Monto", class: "form-label" %>
          <%= f.number_field :amount,
                             value: @expense_detail.amount,
                             class: "form-control",
                             step: "0.01" %>
        </div>
        <div class="mb-3">
          <%= f.label :neighbor_ids, "Vecinos asociados a este gasto", class: "form-label" %>
          <%= f.collection_check_boxes :neighbor_ids,
      @expense_detail.common_expense.community.neighbors,
      :id,
      ->(n) { "#{n.user.name} - Unidad: #{n.unit}" } do |b| %>
            <div class="form-check">
              <%= b.check_box(class: "form-check-input") %>
              <%= b.label(class: "form-check-label") %>
            </div>
          <% end %>
        </div>
        <div class="d-flex gap-2">
          <%= f.submit "Actualizar", class: "btn btn-primary" %>
          <%= link_to "Cancelar",
              common_expense_path(@expense_detail.common_expense),
              class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
