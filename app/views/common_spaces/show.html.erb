<div class="container py-4">

  <!-- Botón volver -->
  <div class="mb-3">
    <%= link_to community_common_spaces_path(@common_space.community),
        class: "text-primary fw-semibold" do %>
      <i class="fa-solid fa-arrow-left"></i> Volver a espacios comunes
    <% end %>
  </div>

  <!-- Header con icono -->
  <div class="text-center mb-4">
    <% icon = case @common_space.name.downcase
              when "quincho" then "fa-utensils"
              when "sala multiusos" then "fa-people-group"
              when "cancha", "cancha deportiva" then "fa-futbol"
              else "fa-building"
              end %>

    <div class="mx-auto mb-3"
         style="
           width: 100px;
           height: 100px;
           border-radius: 50%;
           background: #eef4ff;
           display:flex;
           align-items:center;
           justify-content:center;">
      <i class="fa-solid <%= icon %>" style="font-size: 2.8rem; color:#0743a1;"></i>
    </div>

    <h1 class="fw-bold text-primary"><%= @common_space.name %></h1>
    <p class="text-muted fs-5"><%= @common_space.description %></p>

    <!-- Disponibilidad -->
    <span class="badge <%= @common_space.is_available ? 'bg-success' : 'bg-danger' %> px-3 py-2 rounded-pill fs-6">
      <%= @common_space.is_available ? "Disponible" : "No disponible" %>
    </span>
  </div>

  <!-- Info: Precio + horarios -->
  <div class="row g-4 mb-5">
    <div class="col-md-4">
      <div class="p-4 shadow-sm border-0 rounded-4 bg-white">
        <h5 class="fw-bold text-primary mb-3">
          <i class="fa-solid fa-tag me-2"></i> Precio
        </h5>
        <p class="fs-5 fw-semibold text-dark">
          S/ <%= @common_space.price %>
        </p>
      </div>
    </div>

    <div class="col-md-8">
      <div class="p-4 shadow-sm border-0 rounded-4 bg-white">
        <h5 class="fw-bold text-primary mb-3">
          <i class="fa-solid fa-clock me-2"></i> Horarios Disponibles
        </h5>

        <% if @usable_hours.any? %>
          <ul class="list-group list-group-flush">
            <%# @usable_hours.each do |hour| %>
              <li class="list-group-item d-flex justify-content-between">
                <strong><%#= Date::DAYNAMES[hour.start.wday] %></strong>
                <span>
                  <%#= hour.start.strftime("%H:%M") %> – <%#= hour.end.strftime("%H:%M") %>
                </span>
              </li>
            <%# end %>
          </ul>
        <% else %>
          <p class="text-muted fst-italic">No se configuraron horarios.</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Acciones de reservas -->
  <%= link_to "Mis reservas", common_space_bookings_path(@common_space), data: { turbo_frame: "my_bookings" }%>
  <%= turbo_frame_tag "my_bookings"%>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="fw-bold text-primary mb-0">
      <i class="fa-solid fa-calendar-check me-2"></i>
      Reservas
    </h3>

    <%= link_to new_common_space_booking_path(@common_space),
        data: { turbo_frame: "new_booking" },
        class: "btn btn-primary btn-lg rounded-3 shadow-sm px-4" do %>
      <i class="fa-solid fa-plus me-1"></i> Nueva reserva
    <% end %>
  </div>

  <%= turbo_frame_tag "new_booking" %>

  <% if @bookings.any? %>
    <div class="list-group shadow-sm rounded-4 mb-4">
      <div id="bookings">
        <% @bookings.each do |booking| %>
          <%= render "booking", booking: booking %>
        <% end %>
      </div>
    </div>
  <% else %>
    <p class="text-muted fst-italic mb-4">Todavía no hay reservas para este espacio.</p>
  <% end %>

</div>
