<!-- HERO con video de fondo full centrado -->
<header class="position-relative text-white text-center d-flex align-items-center justify-content-center" style="height: 75vh; background: white;">

  <!-- Video Background -->
  <video
    class="position-absolute top-0 start-0 w-100 h-100"
    autoplay
    loop
    muted
    playsinline
    style="z-index: 0; object-fit: cover; filter: brightness(0.6) saturate(1.15);">
    <source src="https://videos.pexels.com/video-files/6874737/6874737-hd_1920_1080_25fps.mp4" type="video/mp4">
  </video>

  <!-- Overlay Azul elegante degradado -->
  <div
    class="position-absolute top-0 start-0 w-100 h-100"
    style="background: linear-gradient(135deg, rgba(13,110,253,0.35), rgba(7,67,161,0.4)); z-index: 1;">
  </div>

  <!-- Contenido centrado encima del video -->
  <div class="container position-relative px-3" style="z-index: 2; max-width: 900px;">
    <h1 class="display-2 fw-bold mb-3">ComunidApp</h1>
    <p class="lead fs-3 mb-4">La forma más inteligente de vivir en comunidad</p>

    <!-- Botones principales -->
    <div class="d-grid gap-3 d-sm-flex justify-content-center">
      <%= link_to "Crear comunidad", new_community_path, class: "btn btn-light btn-lg px-5 fw-semibold shadow rounded-3" %>

      <% if current_user %>
        <!-- Verificamos si el usuario tiene una comunidad asociada -->
        <% if current_user.resident %>
          <%= link_to "Ir a mi comunidad", community_path(current_user.resident.community), class: "btn btn-outline-light btn-lg px-5 fw-semibold shadow rounded-3 border-2" %>
        <% else %>
          <%= link_to "Registrarse como vecino", new_resident_path, class: "btn btn-outline-light btn-lg px-5 fw-semibold shadow rounded-3 border-2" %>
        <% end %>
      <% else %>
        <!-- Si no hay current_user, mostramos solo "Registrarse como vecino" -->
        <%= link_to "Registrarse como vecino", new_resident_path, class: "btn btn-outline-light btn-lg px-5 fw-semibold shadow rounded-3 border-2" %>
      <% end %>
    </div>

  </div>

</header>

<script>
  AOS.init();
</script>

