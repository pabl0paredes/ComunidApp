<h1>Detalle de gasto común</h1>
<p>
  <strong>Total:</strong>
  <%= number_to_currency(@common_expense.total) %>
</p>
<p>
  <strong>Fecha:</strong>
  <%= l(@common_expense.date) %>
</p>
<hr>
<h2>Detalles del gasto</h2>
<% if @common_expense.expense_details.any? %>
  <ul>
    <% @common_expense.expense_details.each do |detail| %>
      <li>
        <strong><%= detail.detail %></strong> —
        <%= number_to_currency(detail.amount) %> |
        <%= link_to "Ver", expense_detail_path(detail) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No hay detalles asociados.</p>
<% end %>
<p>
  <%= link_to 'Agregar detalle', new_common_expense_expense_detail_path(@common_expense) %>
</p>
<hr>
<p>
  <%= link_to 'Editar', edit_common_expense_path(@common_expense) %> |
  <%= link_to 'Volver a la lista de gastos comunes', community_common_expenses_path(@common_expense.community) %>
</p>
<p>
  <%= link_to 'Eliminar gasto común', @common_expense, method: :delete, data: { confirm: '¿Estás seguro?' } %>
</p>
<p>
  <%= link_to 'Volver a la comunidad', community_path(@common_expense.community) %>
</p>
