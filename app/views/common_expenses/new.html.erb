<div class="container mt-4">

  <div class="card shadow-sm">
    <div class="card-body">

      <h1 class="h4 mb-4">Nuevo Gasto Com√∫n</h1>

      <%= simple_form_for([@community, @common_expense], html: { class: "mt-3" }) do |f| %>

        <div class="mb-3">
          <%= f.input :date,
              label: "Fecha",
              as: :date,
              input_html: { class: "form-control" } %>
        </div>

        <div class="mb-3">
          <%= f.input :total,
              label: "Total",
              as: :integer,
              input_html: { class: "form-control" } %>
        </div>

        <div class="mb-3">
          <%= f.input :neighbor_ids,
              collection: @community.neighbors,
              label_method: ->(n) { "#{n.user.name} - Unidad: #{n.unit}" },
              value_method: :id,
              as: :check_boxes,
              label: "Asignar a vecinos" %>
        </div>

        <%= f.button :submit, "Crear",
            class: "btn btn-primary" %>

        <%= link_to "Cancelar",
            community_common_expenses_path(@community),
            class: "btn btn-secondary ms-2" %>

      <% end %>

    </div>
  </div>

</div>
