<% if @common_expense.new_record? %>
  <%= simple_form_for [@community, @common_expense], html: { class: "mt-3" } do |f| %>

    <div class="mb-3">
      <%= f.input :date, label: "Fecha", as: :date, input_html: { class: "form-control" } %>
    </div>

    <div class="mb-3">
      <%= f.input :total, label: "Total", as: :integer, input_html: { class: "form-control" } %>
    </div>

    <%= f.button :submit, "Guardar", class: "btn btn-success" %>
  <% end %>

<% else %>

  <%= simple_form_for @common_expense, html: { class: "mt-3" } do |f| %>

    <div class="mb-3">
      <%= f.input :date, label: "Fecha", as: :date, input_html: { class: "form-control" } %>
    </div>

    <div class="mb-3">
      <%= f.input :total, label: "Total", as: :integer, input_html: { class: "form-control" } %>
    </div>

    <%= f.button :submit, "Actualizar", class: "btn btn-primary" %>
  <% end %>

<% end %>
