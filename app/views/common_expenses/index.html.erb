<div class="container mt-4">
  <div>
    <%= link_to "Volver a Comunidad", @community %>
  </div>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Gastos comunes - <%= @community.name %></h1>
    <% if @community.administrator_id == current_user.id %>
      <%= link_to "Nuevo Gasto Común",
          new_community_common_expense_path(@community),
          class: "btn btn-primary" %>
    <% end %>
  </div>
  <% if current_user.neighbor.present? && @common_expenses.empty? %>
    <div class="alert alert-info text-center mx-auto mb-4" style="max-width: 400px;">
      No hay gastos comunes asignados a tu nombre
    </div>
  <% end %>
  <div class="card shadow-sm">
    <div class="card-body p-0">
      <% if @common_expenses.any? %>
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Fecha</th>
              <th>Total</th>
              <th class="text-end">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @common_expenses.each do |common_expense| %>
              <tr>
                <td><%= common_expense.date.strftime("%d/%m/%Y") %></td>
                <td><%= number_to_currency(common_expense.total) %></td>
                <td class="text-end">
                  <%= link_to "Detalles",
                      common_expense_expense_details_path(common_expense),
                      class: "btn btn-sm btn-outline-success" %>
                  <% if policy(common_expense).edit? %>
                    <%= link_to "Editar",
                        edit_common_expense_path(common_expense),
                        class: "btn btn-sm btn-outline-primary" %>
                  <% end %>
                  <% if policy(common_expense).destroy? %>
                    <%= link_to "Eliminar",
                        common_expense_path(common_expense),
                        data: { turbo_method: :delete, turbo_confirm: "¿Seguro que deseas eliminar este gasto común?" },
                        class: "btn btn-sm btn-outline-danger" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
  <div class="mt-3">
    <%= link_to "Volver a la comunidad",
        community_path(@community),
        class: "btn btn-secondary" %>
  </div>
</div>
