<div class="container mt-4">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Gastos Comunes</h1>

    <%= link_to "Nuevo Gasto Común",
        new_community_common_expense_path(@community),
        class: "btn btn-primary" %>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">

      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Fecha</th>
            <th>Total</th>
            <th class="text-end">Acciones</th>
          </tr>
        </thead>

        <tbody>
          <% @common_expenses.each do |common_expense| %>
            <tr>
              <td><%= common_expense.date.strftime("%d/%m/%Y") %></td>
              <td><%= number_to_currency(common_expense.total) %></td>

              <td class="text-end">
                <%= link_to "Mostrar",
                    common_expense_path(common_expense),
                    class: "btn btn-sm btn-outline-secondary" %>

                <%= link_to "Editar",
                    edit_common_expense_path(common_expense),
                    class: "btn btn-sm btn-outline-primary" %>

                <%= link_to "Eliminar",
                    common_expense_path(common_expense),
                    method: :delete,
                    data: { confirm: "¿Seguro que deseas eliminar este gasto común?" },
                    class: "btn btn-sm btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>

    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Volver a la comunidad",
        community_path(@community),
        class: "btn btn-secondary" %>
  </div>

</div>
